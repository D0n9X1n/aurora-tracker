# Auto detect text files and normalize line endings to LF
* text=auto

# Source code
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf
*.html text eol=lf
*.json text eol=lf
*.jsonc text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Config files
.editorconfig text eol=lf
.eslintrc* text eol=lf
.prettierrc* text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf
.prettierignore text eol=lf
.eslintignore text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.zip binary
*.gz binary
*.tar binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
